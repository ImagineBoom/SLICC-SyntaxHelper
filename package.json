{
  "name": "gem5-slicc",
  "displayName": "gem5-slicc",
  "description": "gem5 slicc support for Visual Studio Code.",
  "version": "1.6.1",
  "publisher": "Tsinghua-Hexin-Joint-Institute",
  "icon": "images/icons/icon_512x512@2x.png",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:gem5-slicc"
  ],
  "capabilities": {
    "referencesProvider": "true"
  },
  "contributes": {
    "languages": [
      {
        "id": "gem5-slicc",
        "icon": {
          "light": "images/file_icons/icon_512x512@2x.png",
          "dark": "images/file_icons/icon_512x512@2x.png"
        },
        "aliases": [
          "gem5-slicc"
        ],
        "extensions": [
          ".sm",
          ".slicc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gem5-slicc",
        "scopeName": "source.slicc",
        "path": "./syntaxes/gem5-slicc.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/jest": "^29.5.8",
    "@types/mocha": "^10.0.4",
    "@types/vscode": "^1.71.0",
    "commitizen": "^4.3.0",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "semantic-release": "^22.0.5"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "semantic-release": "semantic-release",
    "cz": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "maxHeaderWidth": 72,
      "maxLineWidth": 100,
      "defaultType": "",
      "defaultScope": "",
      "defaultSubject": "",
      "defaultBody": "",
      "defaultIssues": "",
      "types": {
        "feat": {
          "title": "Features",
          "description": "‚ú®  A new feature\n"
        },
        "fix": {
          "title": "Bug Fixes",
          "description": "üêõ  A bug fix\n"
        },
        "docs": {
          "title": "Documentation",
          "description": "üìö  Documentation only changes\n"
        },
        "style": {
          "title": "Styles",
          "description": "üíé  Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)\n"
        },
        "refactor": {
          "title": "Code Refactoring",
          "description": "üì¶  A code change that neither fixes a bug nor adds a feature\n"
        },
        "perf": {
          "title": "Performance Improvements",
          "description": "üöÄ  A code change that improves performance\n"
        },
        "test": {
          "title": "Tests",
          "description": "üö®  Adding missing tests or correcting existing tests\n"
        },
        "build": {
          "title": "Builds",
          "description": "üõ†  Changes that affect the build system or external dependencies (example scopes: gulp, broccoli, npm)\n"
        },
        "ci": {
          "title": "Continuous Integrations",
          "description": "‚õ≠  Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)\n"
        },
        "chore": {
          "title": "Chores",
          "description": "‚ôªÔ∏è  Other changes that don't modify src or test files\n"
        },
        "revert": {
          "title": "Reverts",
          "description": "üóë  Reverts a previous commit\n"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ImagineBoom/gem5-slicc-support.git"
  }
}
